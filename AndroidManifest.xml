<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hive.apps.drawings"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" /> 

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Drawings.TransculentSystemBars" >
        <activity
            android:name="com.example.drawing.Browser"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Drawings.TransculentSystemBars" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.drawing.MainActivity"
            android:label="@string/title_activity_pickcolor"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Drawings.TransculentStatusBar" >
        </activity>
        <activity
            android:name="com.example.drawing.Pickcolor"
            android:label="@string/title_activity_pickcolor"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>